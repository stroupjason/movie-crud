<form method="POST" action="/movies/{{movie.id}}?_method=PUT">
  <div class="form-group">
    <label for="text">Title</label>
    <input type="text" class="form-control" name="title" id="title" value="{{movie.title}}">
  </div>
  <div class="form-group">
    <label for="text">Director</label>
    <input type="text" class="form-control" name="director" id="director" value="{{movie.director}}">
  </div>
  <div class="form-group">
    <label for="date">Year</label>
    <input type="text" name="year" id="year" value="{{movie.year}}" pattern="\d{4}">
  </div>
  <div class="form-group">
    <label for="rating">Rating</label>
    <input type="number" name="my_rating" id="rating" value="{{movie.rating}}">
  </div>
  <div class="form-group">
    <label for="poster">Poster</label>
    <input type="url" name="poster_url" id="url" value="{{movie.image_url}}">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
